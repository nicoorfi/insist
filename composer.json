{
    "name": "nicoorfi/insist",
    "type": "library",
    "description": "A method wrapper around eventsauce/backoff, that retries callables",
    "keywords": [
        "nicoorfi",
        "insist"
    ],
    "homepage": "https://github.com/nicoorfi/insist",
    "license": "MIT",
    "authors": [
        {
            "name": "Nico Orfanos",
            "email": "nico@sigmie.com",
            "homepage": "https://github.com/nicoorfi",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~7.2"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=8.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "nicoorfi\\insist\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "nicoorfi\\insist\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
